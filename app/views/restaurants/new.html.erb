<h1>
	New restaurant
</h1>

<%= form_for @restaurant do |f| %>
  <% if @restaurant.errors.any? %>
    <p> There were errors with your submission:</p>
    <ul>
      <% @restaurant.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>
    <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
    <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
    <div>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <%= f.submit %>
<%end%>
